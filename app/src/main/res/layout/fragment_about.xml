<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.aakashsingh.myapplication5.MainActivity">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:paddingTop="10dp"
        android:src="@drawable/become"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Get out of the box and explore the corporate world."
        android:paddingTop="10dp"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bluedot"
        android:text="  Run workshops and events."
        android:textAlignment="center"
        android:paddingTop="20sp"
        android:paddingLeft="10dp"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bluedot"
        android:paddingTop="30sp"
        android:text="  Experience the new world of technology."
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bluedot"
        android:text="  Improve your skills"
        android:paddingLeft="10dp"
        android:textSize="18dp"
        android:paddingTop="20sp"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:drawableLeft="@drawable/bluedot"
        android:text="  Get exposure to the market."
        android:id="@+id/textView4"
        android:paddingTop="20sp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/bluedot"
        android:text="  Work alongside professionals."
        android:textAlignment="center"
        android:paddingTop="20sp"
        android:paddingLeft="10dp"
        android:id="@+id/textView6"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/abus"
        android:layout_marginTop="30sp"
        android:layout_below="@id/textView6" />
</RelativeLayout>

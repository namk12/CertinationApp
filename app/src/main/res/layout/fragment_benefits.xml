<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv5"
            android:layout_marginTop="5dp"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="5dp"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/benefit1"
            android:id="@+id/imageView7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GAIN CORPORATE EXPERIENCE"
            android:id="@+id/textView9"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv6"

        android:layout_marginTop="5dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView8"
            android:src="@drawable/benefit3"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET MARKET EXPOSURE"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/textView10"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv7"

        android:layout_marginTop="5dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="180dp"
            android:id="@+id/imageView9"
            android:src="@drawable/benefit4"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET CERTIFICATES AND AWARDS"
            android:id="@+id/textView11"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView9"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv8"

        android:layout_marginTop="5dp"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/imageView10"
            android:src="@drawable/benefits5"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET INCENTIVES"
            android:id="@+id/textView12"
            android:textSize="14dp"
            android:paddingBottom="10sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/imageView10"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
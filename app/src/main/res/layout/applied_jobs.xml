<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView1"
    card_view:cardBackgroundColor="#F0F0F0"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Job Post"
                android:textAppearance="?android:attr/textAppearanceLarge"/>


            <TextView
                android:id="@+id/key_skill_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/title1"
                android:text="Key Skills : "
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                android:id="@+id/key_skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/key_skill_11"
                android:layout_below="@+id/title1"

                android:text="Enter Key Skills "
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/description_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Job Description : "
                android:layout_below="@+id/key_skill1"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/description_11"
                android:text="Enter Job Description "
                android:layout_below="@+id/key_skill1"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSeeMore1"
                android:layout_below="@+id/description1"
                android:layout_alignParentRight="true"
                android:text="See More"
                android:textColor="#2A7FFF"
                android:background="#f2f2f2"
                android:clickable="true"
                android:textSize="13dp"
                android:visibility="invisible"

                />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>



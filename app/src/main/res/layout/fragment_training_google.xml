<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/android"
                    />

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/big_data"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/clientserver"
                    android:layout_below="@+id/imageView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/database"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2" />

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/digital_marketing"
                    android:layout_below="@+id/imageView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    />
                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/embedded_systems_google"
                    android:layout_below="@+id/imageView4"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2" />

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/google_cloud"
                    android:layout_below="@+id/imageView5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/html"
                    android:layout_below="@+id/imageView6"
                    android:layout_alignLeft="@+id/imageView7"
                    android:layout_alignStart="@+id/imageView6" />
                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/internet_of_things"
                    android:layout_below="@+id/imageView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/networking"
                    android:layout_below="@+id/imageView8"
                    android:layout_alignLeft="@+id/imageView9"
                    android:layout_alignStart="@+id/imageView8" />
                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/php"
                    android:layout_below="@+id/imageView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="175dp"
                    android:layout_height="147dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/ruby_on_rails"
                    android:layout_below="@+id/imageView10"
                    android:layout_alignLeft="@+id/imageView11"
                    android:layout_alignStart="@+id/imageView10" />

        </RelativeLayout>
</ScrollView>

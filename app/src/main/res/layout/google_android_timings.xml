<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlayout21">

    <TextView
        android:text="WeekDays"
        android:id="@+id/textview100"
        android:background="#b0b0b0"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview100"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Duration"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="wrap_content" />

            <TextView
                android:text="30 Days"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            >

            <TextView
                android:text="Time"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <TextView
                android:text="09:00 AM to 10:30 AM"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal"
            >

            <TextView
                android:text="Price"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <TextView
                android:text="INR 6800"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>



    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Now"
        android:id="@+id/button24"
        android:layout_marginTop="3dp"
        android:onClick="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview101"
        android:background="#b0b0b0"
        android:textColor="#000000"
        android:padding="14dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weekends"
        android:layout_below="@+id/tableLayout"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enroll Now"
        android:layout_marginTop="3dp"
        android:id="@+id/button2"
        android:layout_below="@+id/tableLayout"
        android:layout_alignLeft="@+id/button24"
        android:layout_alignStart="@+id/button24" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textview101"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Duration"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="wrap_content" />

            <TextView
                android:text="45 Days"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            >

            <TextView
                android:text="Time"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <TextView
                android:text="10:00 AM to 01:00 PM"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            >

            <TextView
                android:text="Price"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>

            <TextView
                android:text="INR 6800"
                android:layout_weight="1"
                android:background="#f5f5f5"
                android:textColor="#000000"
                android:padding="10dp"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>


</RelativeLayout>
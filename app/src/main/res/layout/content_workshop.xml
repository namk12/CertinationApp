<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="pls.certination.com.certination.HomeFragment"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="173dp"
        android:id="@+id/imageView18"
        android:layout_alignParentTop="true"

        android:src="@drawable/workshopfinal1" />
<TextView
        android:layout_marginTop="180dp"
        android:layout_marginLeft="16dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There are no shortcuts to any place worth going" />

    <Button
        android:id="@+id/view_workshop"
        android:text="Upcoming"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="260dp"

        />
    <Button
        android:id="@+id/register_now_workshop"
        android:text="Apply Now"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape1"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="345dp"
        />
    <Button
        android:id="@+id/request_now_workshop"
        android:text="Request"
        android:textColor="#C16246"
        android:textSize="30sp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="435dp"
        />

</RelativeLayout>
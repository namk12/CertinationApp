<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/pool_back"

    >


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bMain"
        android:background="@android:color/transparent"
        android:src="@drawable/main_male"
        android:onClick="bMain"
        android:layout_above="@+id/bFemale"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/bMale"
        android:src="@drawable/male"
        android:onClick="bMale"
        android:layout_above="@+id/bDivide"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="149dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bFemale"
        android:background="@android:color/transparent"
        android:src="@drawable/female"
        android:onClick="bFemale"
        android:layout_alignBottom="@+id/bMale"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You guys need to pay me: "
        android:id="@+id/tv_pool"
        android:textColor="@android:color/black"
        android:layout_above="@+id/txtResult"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:id="@+id/bDivide"
        android:drawableBottom="@drawable/money"
        android:onClick="bDivide"
        android:layout_above="@+id/tv_pool"
        android:layout_alignRight="@+id/bMain"
        android:layout_alignEnd="@+id/bMain"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AMOUNT"
        android:id="@+id/txtResult"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bDivide"
        android:layout_alignEnd="@+id/bDivide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtAmount"
        android:layout_above="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_alignRight="@+id/bFemale"
        android:layout_alignEnd="@+id/bFemale" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtCounter"
        android:layout_below="@+id/bFemale"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/txtAmount"
        android:layout_alignEnd="@+id/txtAmount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Persons: "
        android:textSize="15dp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/txtCounter"
        android:layout_toRightOf="@+id/bMale"
        android:layout_toEndOf="@+id/bMale" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Amount:"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
<ImageButton
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:id="@+id/fab_pool"

    android:layout_gravity="bottom|end"
    android:layout_alignBottom="@+id/txtResult"
    android:layout_alignLeft="@+id/bFemale"
    android:layout_alignStart="@+id/bFemale"
    android:background="@drawable/logo_img"
    />
</RelativeLayout>
